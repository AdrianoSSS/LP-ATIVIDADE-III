#include <stdio.h>
#include <string.h>
#include <locale.h>

int main() {
    setlocale(LC_ALL, "portuguese");
    char nome[10][100];
    char numero[10][100];
    int escolha;
    int i;
    int contador=0;
	
	do{
			
	printf("|-----------Menu------------|\n");
    printf("|codigo | alternatinas      |\n");
    printf("|1      | Novo contatos     |\n");
    printf("|2      | exibir contatos   |\n");
    printf("|---------------------------|\n");
    
		printf("escolha: ");
		scanf("%i", &escolha);
		if(escolha ==1)
		{	
			system("cls || clear");
			printf("nome: ");
			fflush(stdin);
			scanf("%s",&nome[contador]);
			
			printf("numero: ");
			fflush(stdin);
			scanf("%s",&numero[contador]);
			system("cls || clear");
			contador++;
			
		}else break;			
					
		
	}while(escolha=1);
	
	for(i=0; i<contador; i++)
{
                printf("exibindo contatos : \n");
		printf("\n\n\n");
		printf("nome: %s\n", nome[i]);
		printf("numero: %s\n", numero[i]);
	}
    return 0;
}
